<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/style_course.css">
  <title>Courses</title>
</head>

<body>
  <% if (user) { %>
    <%- include('navbar') %>

      <!-- Registerkarten Navigation -->
      <div class="tab-container">
        <button class="tab-link active" onclick="openTab(event, 'meineKurse')">Meine Kurse</button>
        <button class="tab-link" onclick="openTab(event, 'alleKurse')">Alle Kurse</button>
      </div>

      <!-- Inhalt der Registerkarte "Meine Kurse" -->
      <div id="meineKurse" class="tab-content active">
        <h2>Meine Kurse</h2>
        <% if (enrolledCourses.length===0) { %>
          <p>Keine Kurse ausgewählt.</p>
          <% } else { %>
            <% enrolledCourses.forEach(course=> { %>
              <div class="course-item">
                <div class="header-container">
                  <div class="title-container">
                    <h3 class="course-title">
                      <%= course.course_name %>
                    </h3>
                    <button class="exit-icon" title="Kurs verlassen" onclick="unenrollCourse('<%= course.id %>')">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
                        <path fill="black"
                          d="M7 6a1 1 0 0 0 0-2H5a1 1 0 0 0-1 1v14a1 1 0 0 0 1 1h2a1 1 0 0 0 0-2H6V6Zm13.82 5.42l-2.82-4a1 1 0 0 0-1.39-.24a1 1 0 0 0-.24 1.4L18.09 11H10a1 1 0 0 0 0 2h8l-1.8 2.4a1 1 0 0 0 .2 1.4a1 1 0 0 0 .6.2a1 1 0 0 0 .8-.4l3-4a1 1 0 0 0 .02-1.18" />
                      </svg>
                    </button>
                  </div>
                  <div class="info-container">
                    <div class="info-details">
                      <div class="info-deco"></div>
                      <div class="info-content">
                        <div>Studiengang</div>
                        <span>
                          <%= course.program_name %>
                        </span>
                      </div>
                    </div>
                    <div class="info-details">
                      <div class="info-deco"></div>
                      <div class="info-content">
                        <div>Dozent</div>
                        <span>
                          Prof. <%= course.lastname %>
                        </span>
                      </div>
                    </div>
                    <input type="hidden" id="prof-email-<%= course.id %>" value="<%= course.user %>">
                    <button class="toggle-btn">
                      <svg class="toggle-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="35"
                        height="35">
                        <path fill='black' d='m5.84 9.59l5.66 5.66l5.66-5.66l-.71-.7l-4.95 4.95l-4.95-4.95z' />
                      </svg>
                    </button>
                  </div>
                </div>
                <!-- Lessons Container -->
                <div class="lessons">
                  <% course.lections.forEach(lection=> { %>
                    <div class="lesson">
                      <button class="play-btn">▶</button>
                      <span>
                        <%= lection %>
                      </span>
                    </div>
                    <% }) %>
                </div>
              </div>
              <% }) %>
                <% } %>
      </div>

      <!-- Inhalt der Registerkarte "Alle Kurse" -->
      <div id="alleKurse" class="tab-content active">
        <div class="content-container">
          <h2>Alle Kurse</h2>
          <div class="course-list">
            <% if (nonEnrolledCourses.length===0) { %>
              <p>Keine verfügbaren Kurse.</p>
              <% } else { %>
                <% nonEnrolledCourses.forEach(course=> { %>
                  <div class="course-item">
                    <div class="header-container">
                      <div class="title-container all-courses">
                        <h3 class="course-title">
                          <%= course.course_name %>
                        </h3>
                        <% const isEnrolled=enrolledCourses.some(enrolled=> enrolled.id === course.id); %>
                          <button class="enroll-btn <%= isEnrolled ? 'enrolled' : '' %>"
                            id="enroll-btn-<%= course.id %>" title="<%= isEnrolled ? 'Beigetreten' : 'Beitreten' %>"
                            onclick="enrollCourse('<%= course.id %>')">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="20" height="20">
                              <path fill="black" d="M9 16.17L4.83 12l-1.42 1.41L9 19L21 7l-1.41-1.41z" />
                            </svg>
                            <%= isEnrolled ? 'Beigetreten' : 'Beitreten' %>
                          </button>
                      </div>
                      <div class="info-container">
                        <div class="info-details">
                          <div class="info-deco"></div>
                          <div class="info-content">
                            <div>Studiengang</div>
                            <span>
                              <%= course.program_name %>
                            </span>
                          </div>
                        </div>
                        <div class="info-details">
                          <div class="info-deco"></div>
                          <div class="info-content">
                            <div>Dozent</div>
                            <span>
                              Prof. <%= course.lastname %>
                            </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %>
                    <% } %>
          </div>
        </div>
      </div>
      <% } else { %>
        <div id="container">
          <div id="login-hint">
            Please <a href="/"> log in</a> to view this page!
          </div>
        </div>
        <% } %>
          <script src="js/course.js"></script>
</body>

</html>